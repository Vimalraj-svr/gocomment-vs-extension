{
  "name": "linewise",
  "displayName": "Linewise",
  "description": "Transform your coding experience with Linewise â€“ your intelligent assistant for seamless code documentation and vulnerability analysis. Say goodbye to tedious comment writing and security concerns. With Linewise, effortlessly generate descriptive comments for your code snippets and detect potential vulnerabilities in seconds. Empower your development workflow with AI-driven insights and streamline your coding process like never before.",
  "version": "0.0.1",
  "publisher": "vimalrajs0957",
  "repository": "https://github.com/Vimalraj-svr/linewise-vs-extension",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:linewise.showUI",
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linewise",
          "title": "Linewise",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "linewise": [
        {
          "id": "commentsTreeView",
          "name": "Usage Instructions"
        }
      ]
    },
    "commands": [
      {
        "command": "linewise.generateComments",
        "title": "Generate Comments"
      },
      {
        "command": "linewise.viewVuls",
        "title": "View Vulnerabilities"
      },
      {
        "command": "linewise.showUI",
        "title": "Show Web view"
      },
      {
        "command": "linewise.showTreeView",
        "title": "Show Comments Tree View"
      }      
    ],
    "keybindings": [
      {
        "command": "linewise.showUI",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}

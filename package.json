{
  "name": "gocomment",
  "displayName": "goComment",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gocomment.showUI",
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gocomment",
          "title": "Go Comment",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "gocomment": [
        {
          "id": "commentsTreeView",
          "name": "Comments Tree View"
        }
      ]
    },
    "commands": [
      {
        "command": "gocomment.generateComments",
        "title": "Generate Comments"
      },
      {
        "command": "gocomment.viewVuls",
        "title": "View Vulnerabilities"
      },
      {
        "command": "gocomment.showUI",
        "title": "Show Web view"
      },
      {
        "command": "gocomment.showTreeView",
        "title": "Show Comments Tree View"
      }      
    ],
    "keybindings": [
      {
        "command": "gocomment.showUI",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
